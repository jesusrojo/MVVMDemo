<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.jesusrojo.mvvmdemo.presentation.fragments.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/items_layout">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <argument
            android:name="myArg"
            app:argType="com.jesusrojo.mvvmdemo.data.model.UiData"/>

    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.jesusrojo.mvvmdemo.presentation.fragments.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/item_layout">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>